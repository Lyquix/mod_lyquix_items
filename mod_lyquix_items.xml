					<option value="week">MOD_LYQUIX_ITEMS_THIS_WEEK</option>
					<option value="month">MOD_LYQUIX_ITEMS_THIS_MONTH</option>
					<option value="year">MOD_LYQUIX_ITEMS_THIS_YEAR</option>
